<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_95"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="12dp"
    tools:context="com.developer.test.chat.ui.activities.phone_number.PhoneNumberActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_marginTop="32dp"
                android:contentDescription="@string/app_name"
                app:srcCompat="@drawable/mobile_auth" />

            <TextView
                android:id="@+id/tvVerifyNumberTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/manrope_bold"
                android:text="@string/verify_your_phone_number"
                android:textColor="@color/grey_20"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvVerifyNumberDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/manrope_regular"
                android:gravity="center"
                android:text="@string/chats_app_will_send_an_sms_message_to_verify_your_phone_number"
                android:textColor="@color/grey_20"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/textbox_outline"
                        android:enabled="false"
                        android:fontFamily="@font/manrope_regular"
                        android:imeOptions="actionDone"
                        android:padding="10dp"
                        android:text="+91"
                        android:textColor="@color/white"
                        android:textColorHint="@color/black" />

                    <EditText
                        android:id="@+id/etPhoneNumber"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/textbox_outline"
                        android:ems="10"
                        android:fontFamily="@font/manrope_regular"
                        android:hint="@string/type_your_phone_number"
                        android:imeOptions="actionDone"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:padding="10dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/grey_20" />
                </LinearLayout>

                <TextView
                    android:id="@+id/btnContinue"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginVertical="20dp"
                    android:background="@drawable/round_background_gradient"
                    android:fontFamily="@font/satoshi_bold"
                    android:gravity="center"
                    android:text="@string/_continue"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>