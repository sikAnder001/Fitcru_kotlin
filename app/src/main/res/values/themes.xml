<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FitCruNewAndroid" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/one</item>
        <item name="colorSecondaryVariant">#E702AB</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>

        <item name="bottomSheetDialogTheme">@style/ModalBottomSheetDialog</item>
    </style>

    <style name="WhiteToolbarTheme" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <!-- This attributes is used by navigation icon and overflow icon -->
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="TrainerImgCustomCardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>

    <style name="TabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ImageDialogTheme">
        <item name="android:windowEnterAnimation">@anim/slide_down_animation</item>
        <item name="android:windowExitAnimation">@anim/slide_up_animation</item>
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@anim/fade_out</item>
    </style>

    <style name="Theme.FitCruNewAndroid.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FitCruNewAndroid.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FitCruNewAndroid.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CalendarTheme">
        <!-- Text color -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Divider color -->
        <item name="colorControlNormal">@color/white</item>
        <item name="android:fontFamily">@font/manrope_semibold</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="TimeTheme">
        <!-- Text color -->
        <item name="android:textColorPrimary">@color/grey_10</item>
        <!-- Divider color -->
        <item name="colorControlNormal">@color/grey_60</item>
        <item name="android:fontFamily">@font/manrope_semibold</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/notosans_bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="tab_text2" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/notosans_bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/grey_text</item>
    </style>

    <style name="mySpinnerItemStyle2" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="Spinner" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="RatingBar" parent="Theme.FitCruNewAndroid">
        <item name="colorControlActivated">@color/one</item>
        <item name="colorControlNormal">@color/one</item>
    </style>


    <style name="CustomCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>


    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">18dp</item>
        <item name="cornerSizeBottomLeft">18dp</item>
    </style>


    <style name="CustomCardViewStyleForSessionCompleted" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay_card_custom_corners_session_completed
        </item>
    </style>


    <style name="ShapeAppearanceOverlay_card_custom_corners_session_completed" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">18dp</item>
        <item name="cornerSizeTopLeft">18dp</item>
        <item name="cornerSizeBottomRight">18dp</item>
        <item name="cornerSizeBottomLeft">18dp</item>
    </style>


    <style name="ModalBottomSheet" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <!-- Apply attributes here -->
        <item name="backgroundTint">@color/transparent_20</item>
        <item name="shapeAppearance">@style/RoundedCorner</item>
    </style>

    <style name="ModalBottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalBottomSheet</item>
    </style>

    <style name="RoundedCorner" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="ImgCustomCardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners_img
        </item>
    </style>


    <style name="ShapeAppearanceOverlay_card_custom_corners_img" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">10dp</item>
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeBottomRight">10dp</item>
        <item name="cornerSizeBottomLeft">10dp</item>
    </style>

    <style name="ChipTextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/notosans_regular</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="SpinnerTimePickerDialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@android:color/darker_gray</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:descendantFocusability">blocksDescendants</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:calendarViewShown">false</item>
        <item name="android:timePickerMode">spinner</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:colorAccent">@color/grey_10</item>
        <item name="android:textColor">@color/grey_10</item>
        <item name="android:textColorPrimary">@color/grey_10</item>
        <item name="fontFamily">@font/manrope_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/grey_95</item>
    </style>

    <!-- <style name="Widget_MaterialComponents_Chip_Choice">
         <item name="chipBackgroundColor">@color/background_color_chip_state_list</item>
         <item name="android:textColor">@color/text_color_chip_state_list</item>
         <item name="android:textSize">14sp</item>
     </style>-->

    <style name="CustomChipChoice" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/background_color_chip_state_list</item>
        <item name="android:textColor">@color/text_color_chip_state_list</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="dialogCornerRadius">16dp</item>

        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/NeutralButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/pro1</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/pro1</item>
    </style>

    <style name="NeutralButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/pro1</item>
    </style>


    <style name="AppTheme.Base" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/one</item>
        <item name="colorControlHighlight">@color/one</item>
        <item name="colorControlNormal">@color/one</item>

        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/one</item>

        <item name="android:windowBackground">@color/background_app_color</item>
    </style>

    <!-- Base application theme. -->
    <style name="VideoChatTheme" parent="AppTheme.Base">
        <item name="colorAccent">@color/color_blue_qb</item>
        <item name="colorControlActivated">@color/color_blue_accent</item>
        <item name="colorControlHighlight">@color/color_blue_accent</item>
        <item name="colorControlNormal">@color/color_blue_accent</item>
    </style>

    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="android:windowActionBar">false</item>-->
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>

        <item name="android:windowBackground">@color/background_app_color</item>
    </style>


</resources>