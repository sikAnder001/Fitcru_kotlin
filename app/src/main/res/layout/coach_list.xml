<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="7dp"
    android:background="@drawable/background_for_food">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/place_holder" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvCoachName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:autoLink="web"
                            android:fontFamily="@font/notosans_semibold"
                            android:linksClickable="true"
                            android:maxLines="2"
                            android:text=""
                            android:textColor="@drawable/linking"
                            android:textSize="16dp" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/locationView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:backgroundTint="@color/gray"
                            app:cardCornerRadius="50dp">

                            <TextView
                                android:id="@+id/location"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/notosans_semibold"
                                android:padding="5dp"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="@color/grey_95"
                                android:textSize="10sp" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosans_regular"
                        android:text=""
                        android:textColor="@color/offwhite"
                        android:textSize="12sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvClients"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosans_regular"
                        android:text=""
                        android:textColor="@color/offwhite"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/next"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="2"
                            android:background="@drawable/round_background_gray"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:drawableTint="@color/most"
                                android:fontFamily="@font/notosans_semibold"
                                android:padding="5dp"
                                android:src="@drawable/ic_calendar_2"
                                android:textColor="@color/grey_10"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/chat"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="2"
                            android:background="@drawable/round_background_gray"
                            android:gravity="center">

                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:drawableRight="@drawable/right_arrow"
                                android:drawableTint="@color/one"
                                android:fontFamily="@font/notosans_semibold"
                                android:paddingHorizontal="5dp"
                                android:paddingVertical="2dp"
                                android:text="@string/chat"
                                android:textColor="@color/grey_10"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>
