<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="188dp"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="10dp"
    android:background="@drawable/round_back_transparent"
    android:orientation="vertical"
    android:padding="5dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/benifit_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/benifits_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="8dp"
        android:fontFamily="@font/manrope_bold"
        android:gravity="center"
        android:text="@string/quality_trainers"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/benifits_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/manrope_regular"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/to_provide_you_best_personal_experience"
        android:textColor="@color/grey_40"
        android:textSize="12sp" />
</LinearLayout>