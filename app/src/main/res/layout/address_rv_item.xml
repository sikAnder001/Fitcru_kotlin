<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/address_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="12dp"
    android:background="@drawable/edit_profile_edit_text_bg"
    android:orientation="horizontal"
    android:padding="12dp">

    <ImageView
        android:id="@+id/selected_address_iv"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:src="@drawable/non_selected_address" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="5dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="35dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/notosans_medium"
            android:gravity="start"
            android:text="@string/prashant_s"
            android:textColor="@color/grey_10"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/address_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/notosans_medium"
            android:gravity="start"
            android:text="@string/vivamus_eget_aliquam_dui_integer_eu_arcu_vel_arcu_suscipit"
            android:textColor="@color/grey_60"
            android:textSize="16sp" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/delete_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:src="@drawable/delete_icon" />

        <ImageView
            android:id="@+id/edit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:background="@drawable/circle_background"
            android:backgroundTint="@color/grey_10"
            android:padding="5dp"
            android:src="@drawable/ic_edit" />

    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.appcompat.widget.LinearLayoutCompat>