<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/what_brings_you_item_container"
    android:layout_width="match_parent"
    android:layout_height="155dp"
    android:layout_margin="5dp"
    android:background="@drawable/round_back_transparent"
    android:gravity="center"
    android:padding="5dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="155dp"
        android:layout_height="155dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="15dp">

            <ImageView
                android:id="@+id/workout_vibe_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/loss" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/workout_vibe_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/manrope_bold"
            android:gravity="center"
            android:text="@string/weight_loss"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/workout_vibe_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:fontFamily="@font/manrope_regular"
            android:gravity="center"
            android:maxLines="2"
            android:minLines="2"
            android:text="@string/Lorem"
            android:textColor="@color/grey_40"
            android:textSize="11sp" />
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>