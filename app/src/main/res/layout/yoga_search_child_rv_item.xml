<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginEnd="15dp">

    <androidx.cardview.widget.CardView
        android:layout_width="331dp"
        android:layout_height="308dp"
        app:cardCornerRadius="15dp">

        <ImageView
            android:id="@+id/thumbnail_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/view_profile_img_icon" />

        <ImageView
            android:id="@+id/play_btn"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:src="@drawable/exo_ic_play_circle_filled"
            app:tint="@color/grey_3" />

        <TextView
            android:id="@+id/views"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:background="@drawable/round_back"
            android:fontFamily="@font/manrope_semibold"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:text="@string/_9_4k_views"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/round_back_transparent2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/yoga_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/manrope_regular"
                android:text="@string/paul_grand"
                android:textColor="@color/offwhite"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/yoga_choose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/manrope_semibold"
                android:text="@string/choose_to_lose_cardio"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1">


                    <ImageView
                        android:id="@+id/duration_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="3dp"
                        android:src="@drawable/part_time_icon" />

                    <TextView
                        android:id="@+id/yoga_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/manrope_regular"
                        android:padding="3dp"
                        android:text="@string/_1_hr_30_min"
                        android:textColor="@color/offwhite"
                        android:textSize="14sp" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="75dp"
                    android:layout_weight="1">


                    <ImageView
                        android:id="@+id/dot_image"
                        android:layout_width="18dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:padding="1dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/dot_icon" />

                    <TextView
                        android:id="@+id/yoga_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/manrope_regular"
                        android:padding="3dp"
                        android:text="@string/intermediate"
                        android:textColor="@color/offwhite"
                        android:textSize="14sp" />
                </androidx.appcompat.widget.LinearLayoutCompat>


            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>