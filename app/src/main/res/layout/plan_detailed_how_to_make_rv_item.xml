<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="5dp">

    <ImageView
        android:id="@+id/circle_icon"
        android:layout_width="10dp"
        android:layout_height="15dp"
        android:padding="2dp"
        android:src="@drawable/circular_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/plan_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/manrope_regular"
        android:text="@string/customizable_diet_plan"
        android:textColor="@color/grey_10"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/circle_icon"
        app:layout_constraintLeft_toRightOf="@id/circle_icon"
        app:layout_constraintTop_toTopOf="@id/circle_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>