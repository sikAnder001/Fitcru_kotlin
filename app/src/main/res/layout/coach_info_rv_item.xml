<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="5dp">

    <ImageView
        android:id="@+id/coach_info_icon"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/coach_certified_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/coach_info_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/manrope_medium"
        android:gravity="start"
        android:text="@string/certified_coaches"
        android:textColor="@color/grey_10"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@id/coach_info_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/coach_info_icon" />
</androidx.constraintlayout.widget.ConstraintLayout>