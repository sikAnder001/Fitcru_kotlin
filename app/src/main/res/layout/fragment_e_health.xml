<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_95"
        tools:context=".fragment.EHealthFragment">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/items_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/items_container_second"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/weight_item_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/weight_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/notosans_medium"
                            android:text="@string/weight"
                            android:textColor="@color/grey_text"
                            android:textSize="16sp" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/weight_et_container"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginVertical="10dp"
                            android:background="@drawable/edit_profile_edit_text_bg"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/weight_et"
                                android:layout_width="wrap_content"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="@null"
                                android:fontFamily="@font/notosans_medium"
                                android:inputType="numberDecimal"
                                android:paddingHorizontal="20dp"
                                android:textColor="@color/white"
                                android:textColorHint="@color/grey_20"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/weight_type_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:fontFamily="@font/notosans_medium"
                                android:gravity="center"
                                android:paddingHorizontal="20dp"
                                android:text="@string/kg"
                                android:textColor="@color/grey_text"
                                android:textSize="18sp" />
                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/target_weight_item_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/target_weight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/notosans_medium"
                            android:text="@string/target_weight"
                            android:textColor="@color/grey_text"
                            android:textSize="16sp" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/target_weight_et_container"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginVertical="10dp"
                            android:background="@drawable/edit_profile_edit_text_bg"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/target_weight_et"
                                android:layout_width="wrap_content"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="@null"
                                android:fontFamily="@font/notosans_medium"
                                android:inputType="numberDecimal"
                                android:paddingHorizontal="20dp"
                                android:textColor="@color/white"
                                android:textColorHint="@color/grey_20"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/target_weight_type_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:fontFamily="@font/notosans_medium"
                                android:gravity="center"
                                android:paddingHorizontal="20dp"
                                android:text="@string/kg"
                                android:textColor="@color/grey_text"
                                android:textSize="18sp" />
                        </androidx.appcompat.widget.LinearLayoutCompat>


                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/height_item_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/height_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/notosans_medium"
                            android:text="@string/height"
                            android:textColor="@color/grey_text"
                            android:textSize="16sp" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/height_et_container"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginVertical="10dp"
                            android:background="@drawable/edit_profile_edit_text_bg"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/height_et"
                                android:layout_width="wrap_content"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="@null"
                                android:fontFamily="@font/notosans_medium"
                                android:inputType="numberDecimal"
                                android:paddingHorizontal="20dp"
                                android:textColor="@color/white"
                                android:textColorHint="@color/grey_20"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/height_type_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:fontFamily="@font/notosans_medium"
                                android:gravity="center"
                                android:paddingHorizontal="20dp"
                                android:text="@string/ft"
                                android:textColor="@color/grey_text"
                                android:textSize="18sp" />
                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/food_preference_item_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/food_preference_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/notosans_medium"
                            android:text="@string/food_preference"
                            android:textColor="@color/grey_text"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:background="@drawable/edit_profile_edit_text_bg">

                            <Spinner
                                android:id="@+id/spFoodPreference"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:background="@null" />
                        </LinearLayout>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/fitness_level_item_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/fitness_level_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/notosans_medium"
                            android:text="@string/fitness_level_edit"
                            android:textColor="@color/grey_text"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:background="@drawable/edit_profile_edit_text_bg">

                            <Spinner
                                android:id="@+id/spFitnessLevel"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:background="@null" />
                        </LinearLayout>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/daily_activity_item_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/daily_activity_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/notosans_medium"
                            android:text="@string/daily_activity"
                            android:textColor="@color/grey_text"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:background="@drawable/edit_profile_edit_text_bg">

                            <Spinner
                                android:id="@+id/spActivity"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:background="@null" />
                        </LinearLayout>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/workout_vibe_item_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/workout_vibe_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/notosans_medium"
                            android:text="Workout Vibe"
                            android:textColor="@color/grey_text"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:background="@drawable/edit_profile_edit_text_bg">

                            <Spinner
                                android:id="@+id/spWorkoutVibe"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:background="@null" />
                        </LinearLayout>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/your_goal_item_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/your_goal_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/notosans_medium"
                            android:text="@string/your_goal"
                            android:textColor="@color/grey_text"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:background="@drawable/edit_profile_edit_text_bg">

                            <Spinner
                                android:id="@+id/spYourGoal"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:background="@null" />
                        </LinearLayout>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <TextView
                        android:id="@+id/steps_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/notosans_medium"
                        android:padding="3dp"
                        android:text="Target Steps"
                        android:textColor="@color/grey_text"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/steps_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginVertical="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/edit_profile_edit_text_bg"
                        android:fontFamily="@font/notosans_medium"
                        android:inputType="number|none"
                        android:minHeight="60dp"
                        android:paddingHorizontal="20dp"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textColorHint="@color/grey_20"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/water_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/notosans_medium"
                        android:padding="3dp"
                        android:text="@string/water1"
                        android:textColor="@color/grey_text"
                        android:textSize="16sp" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/water_et_container"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginVertical="10dp"
                        android:background="@drawable/edit_profile_edit_text_bg"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/water_et"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@null"
                            android:fontFamily="@font/notosans_medium"
                            android:inputType="number|none"
                            android:paddingHorizontal="20dp"
                            android:singleLine="true"
                            android:textColor="@color/white"
                            android:textColorHint="@color/grey_20"
                            android:textSize="18sp" />

                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/water_type_spinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:entries="@array/water"
                            android:minHeight="60dp"
                            android:theme="@style/mySpinnerItemStyle2"
                            android:visibility="gone" />
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <TextView
                        android:id="@+id/sleep_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/notosans_medium"
                        android:padding="3dp"
                        android:text="@string/sleep"
                        android:textColor="@color/grey_text"
                        android:textSize="16sp" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/sleep_et_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/sleep_et_pm"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:layout_marginEnd="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/edit_profile_edit_text_bg"
                            android:fontFamily="@font/notosans_medium"
                            android:gravity="fill_vertical"
                            android:maxWidth="170dp"
                            android:minWidth="170dp"
                            android:paddingHorizontal="20dp"
                            android:singleLine="true"
                            android:textColor="@color/white"
                            android:textColorHint="@color/grey_20"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/wake_et_am"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/edit_profile_edit_text_bg"
                            android:fontFamily="@font/notosans_medium"
                            android:gravity="fill_vertical"
                            android:maxWidth="170dp"
                            android:minWidth="170dp"
                            android:paddingHorizontal="20dp"
                            android:singleLine="true"
                            android:textColor="@color/white"
                            android:textColorHint="@color/grey_20"
                            android:textSize="18sp" />
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/tv_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginBottom="12dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/bed_time_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_weight="1"
                            android:fontFamily="@font/notosans_regular"
                            android:gravity="start"
                            android:text="@string/bed_time"
                            android:textColor="@color/grey_10"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/wake_up_time_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginStart="40dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/notosans_regular"
                            android:gravity="start"
                            android:text="@string/wake_up_time"
                            android:textColor="@color/grey_10"
                            android:textSize="12sp" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <TextView
                        android:id="@+id/tvContinue"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/round_background_gradient"
                        android:fontFamily="@font/notosans_bold"
                        android:gravity="center"
                        android:text="@string/save"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>