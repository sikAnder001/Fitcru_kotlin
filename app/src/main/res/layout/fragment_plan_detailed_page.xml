                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="2dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/manrope_regular"
                            android:gravity="start"
                            android:padding="3dp"
                            android:text="@string/price_discount"
