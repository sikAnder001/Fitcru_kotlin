                            android:layout_height="wrap_content"
                            android:fontFamily="@font/manrope_bold"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="@string/u20b9"
                            android:textColor="@color/grey_10"
                            android:textSize="20sp" />

                        <TextView
