<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/get_started_btn_"
        android:layout_width="290dp"
        android:layout_height="340dp"
        android:layout_gravity="center"
        app:cardCornerRadius="20dp">

        <ImageView
            android:id="@+id/poster_img"
            android:layout_width="290dp"
            android:layout_height="340dp"
            android:scaleType="centerCrop"
            android:src="@drawable/place_holder" />

        <LinearLayout
            android:id="@+id/items_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:gravity="right"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/lock_img"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/back_btn_circular_background"
                android:elevation="5dp"
                android:padding="5dp"
                android:src="@drawable/lock_icon"
                app:tint="@color/white" />

            <!--            <TextView-->
            <!--                -->
            <!--                android:layout_width="112dp"-->
            <!--                android:layout_height="45dp"-->
            <!--                android:layout_below="@id/fitCru_elite_tv"-->
            <!--                android:layout_gravity="center"-->
            <!--                android:layout_marginTop="18dp"-->
            <!--                android:background="@drawable/get_background"-->
            <!--                android:fontFamily="@font/manrope_semibold"-->
            <!--                android:gravity="center"-->
            <!--                android:padding="5dp"-->
            <!--                android:text="@string/get_stared1"-->
            <!--                android:textColor="@color/white"-->
            <!--                android:textSize="14sp" />-->

        </LinearLayout>

        <TextView
            android:id="@+id/sessions_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="35dp"
            android:layout_marginTop="280dp"
            android:fontFamily="@font/manrope_bold"
            android:padding="3dp"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/feedback_background"

            android:orientation="vertical"
            android:paddingBottom="10dp">

            <!--<TextView
                android:id="@+id/user_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/manrope_bold"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="12sp" />-->


            <TextView
                android:id="@+id/fitCru_elite_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_category"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"

                android:fontFamily="@font/notosans_extrabold"

                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/user_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:drawableLeft="@drawable/ic_intermediate"

                android:drawablePadding="5dp"
                android:fontFamily="@font/notosans_semibold"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white"
                android:textSize="10sp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>